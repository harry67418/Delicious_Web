@model prjDelicious.Models.Tingredient

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tingredient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            產品名稱：
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ingredient)
        </dd>
        <dt class = "col-sm-2">
           規格：
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IngredientUnit)
        </dd>
        <dt class = "col-sm-2">
            價格：
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            產品描述
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MerchandiseDescription)
        </dd>
        <dt class = "col-sm-2">
           產品分類
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IngredientCategory.IngredientCategory)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IngredientId">Edit</a> |
