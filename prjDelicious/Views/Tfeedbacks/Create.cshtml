@model prjDelicious.Models.Tfeedback

@{
    ViewData["Title"] = "Create";
    
}
<div class="container">
    <h1>客服回報頁面</h1>    
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="MemberId" class="form-control" value=@ViewBag.MemberId hidden/>
                </div>
                <div class="form-group">
                    <label asp-for="FeedbackCategoryId" class="control-label">回報項目</label>
                    <select asp-for="FeedbackCategoryId" class="form-control" asp-items="ViewBag.FeedbackCategoryId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Contents" class="control-label">回報內容</label>
                    <input asp-for="Contents" class="form-control" />
                    <span asp-validation-for="Contents" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="file" class="form-control-file" id="imageInput" name="Photo">
                </div>
                <div class="form-group">
                    <input type="submit" value="送出" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">回上一頁</a>
    </div>
    </div>
    @section Scripts {
        @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@
    }
