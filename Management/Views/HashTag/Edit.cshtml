@model Management.Models.Thashtag

@{
    ViewData["Title"] = "編輯HashTag";
}

<h1>編輯HashTag</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HashtagId" />
            <div class="form-group">
                <label value="Hash名稱" class="control-label"></label>
                <input asp-for="Hasgtag" class="form-control" />
                <span asp-validation-for="Hasgtag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回到HashTag列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
